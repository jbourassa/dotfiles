export EDITOR='nvim'
if !command -v nvim &> /dev/null
then
  echo "nvim not found"
  export EDITOR='vim'
fi

export PATH=$HOME/dotfiles/bin:$PATH
export LESS='-iR --hilite-search'
export RIPGREP_CONFIG_PATH=$HOME/.ripgreprc
[[ -f "$HOME/.cargo/env" ]] && . "$HOME/.cargo/env"

eval "$(~/.local/bin/mise activate zsh)"
